<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.ui.gamedetail.GameDetailsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_gameCard"
        android:layout_width="115dp"
        android:layout_height="160dp"
        android:clipToPadding="true"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_gameTitle"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:id="@+id/img_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        tools:text="Resident evil 4 Remake" />

    <TextView
        android:id="@+id/tv_statusLabel"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_genreLabel"
        android:layout_marginStart="30dp"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/cv_gameCard"
        app:layout_constraintTop_toBottomOf="@+id/tv_gameTitle"
        app:layout_constraintVertical_bias="0.7"
        android:text="Status" />

    <TextView
        android:id="@+id/tv_status"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_genre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@+id/tv_statusLabel"
        app:layout_constraintTop_toBottomOf="@+id/tv_gameTitle"
        app:layout_constraintVertical_bias="0.02"
        android:text="Status" />

    <TextView
        android:id="@+id/tv_genreLabel"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_platformLabel"
        android:layout_marginStart="30dp"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@+id/cv_gameCard"
        app:layout_constraintTop_toBottomOf="@+id/tv_statusLabel"
        app:layout_constraintVertical_bias="0.02"
        android:text="Genre" />

    <TextView
        android:id="@+id/tv_genre"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_platform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@+id/tv_genreLabel"
        app:layout_constraintTop_toBottomOf="@+id/tv_status"
        app:layout_constraintVertical_bias="0.02"
        tools:text="Genre" />

    <TextView
        android:id="@+id/tv_platformLabel"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_publisherLabel"
        android:layout_marginStart="30dp"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@+id/cv_gameCard"
        app:layout_constraintTop_toBottomOf="@+id/tv_genreLabel"
        app:layout_constraintVertical_bias="0.02"
        android:text="Platform" />

    <TextView
        android:id="@+id/tv_platform"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_publisher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@+id/tv_platformLabel"
        app:layout_constraintTop_toBottomOf="@+id/tv_genre"
        app:layout_constraintVertical_bias="0.02"
        tools:text="Platform" />

    <TextView
        android:id="@+id/tv_publisherLabel"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/guideline1"
        android:layout_marginStart="30dp"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@+id/cv_gameCard"
        app:layout_constraintTop_toBottomOf="@+id/tv_platformLabel"
        app:layout_constraintVertical_bias="0.02"
        android:text="Publisher" />

    <TextView
        android:id="@+id/tv_publisher"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@+id/tv_publisherLabel"
        app:layout_constraintTop_toBottomOf="@+id/tv_platform"
        app:layout_constraintVertical_bias="0.02"
        tools:text="Publisher" />

    <TextView
        android:id="@+id/tv_description"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline1"
        app:layout_constraintVertical_bias="0.02"
        android:text="Description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        tools:text="A standalone free-to-play battle royale and modes accessible via Call of Duty: Modern Warfare." />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_screenshots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        tools:listitem="@layout/game_item"/>



</androidx.constraintlayout.widget.ConstraintLayout>